{% extends "layout.twig" %}

{% block body %}
    <h1> Login </h1>
    <form action="" method="POST">
        <p class="text-center">You don't have an account ? <a href="/users/signup">Please click here to signup !</a></p>
        
        <div class="form-group">
            <label for="username">username :</label>
            <input type="text" id="username" value="nodejs" name="username" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Password :</label>
            <input type="password" name="password" value="password" id="password" class="form-control">
        </div>
        <p class="text-center">Do you forgot password ? <a href="/users/forgot-password">click here to reset !</a></p>
       
        <button type="submit" class="btn btn-success mt-3">login</button>
    </form>
{% endblock body %}